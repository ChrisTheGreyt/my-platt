{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "noImplicitAny": false,
    "target": "es5",
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["node_modules/@types", "./types", "./src/types"],
    "outDir": "./dist",
    "rootDir": "./src",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    },
    "baseUrl": "."
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "src/aws-exports.js", "src/aws-exports.js", "src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules", ".next",  "tailwind.config.ts"]
}
